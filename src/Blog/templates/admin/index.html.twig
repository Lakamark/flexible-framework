{% extends '@admin/layout.html.twig' %}

{% block title "Post" %}

{% block body %}
    <p class="text-right">
        <a href="{{ path('post.admin.create') }}" class="btn btn-success">Create a new article</a>
    </p>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for item in items %}
            <tr>
                <td>{{ item.id }}</td>
                <td>{{ item.name }}</td>
                <td>
                    <a href="{{ path('post.admin.edit', {id: item.id}) }}" class="btn btn-primary">Edit</a>
                    <form action="{{ path('post.admin.delete', {id: item.id}) }}" method="post" onsubmit="
                        confirm('Are your shure?');" style="display: inline;">
                        <input type="hidden" name="_method" value="DELETE">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {{ paginate(items, 'post.admin.index') }}
{% endblock %}
